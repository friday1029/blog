<div class="row g-5">
  <div class="col-md-9">
    <article class="blog-post">
      <h2 class="display-5 link-body-emphasis mb-1"><%= @post.title_zh %></h2>
      <p class="blog-post-meta"><%= @post.updated_at.to_s(:date) %></p>
      <%= image_tag @post.cover_image_url , width: '100%', height: '100%' %>
      <%== @post.content_zh %>
<% if false %>
      <h2 class="display-5 link-body-emphasis mb-1"></h2>
      <p class="blog-post-meta">January 1, 2021 by <a href="#">Mark</a></p>
      <%= image_tag 'https://picsum.photos/1600/900', width: '100%', height: '100%' %>
