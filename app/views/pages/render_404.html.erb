<% content_for :title, "404 Page not Found" %>

<style>
#error-page a.btn {
  display: inline-block;
  background-color: blue;
  color: #fff;
  text-align: center;
  padding:15px 30px;
  margin-bottom: 30px;
}
#error-page a.btn:hover {
  background-color: #fff;
  color: blue;
}

#error-page {
  flex: 1;
  text-align: center;
  background-color: white;
}
#error-page h3 {
  margin-top: 2em;
  color: #777;
}
#error-page hr {
  position: relative;
  display: block;
  overflow: visible;
  margin: 2.5em 0;
  padding: 0;
  height: 1px;
  border: 0;
  border-top: 2px #eeeded solid;
}
#error-page hr:before {
  position: absolute;
  top: -1px;
  left: 0;
  display: inline-block;
  width: 20%;
  height: 1px;
  content: '';
  background-color: blue;
}
#error-page hr:after {
  position: absolute;
  top: -1px;
  right: 0;
  display: inline-block;
  width: 20%;
  height: 1px;
  content: '';
  background-color: blue;
}
#error-page .err-404 {
  position: relative;
  margin-top: 60px;
  color: #494949;
  font-weight: 800;
  font-size: 150px;
  line-height: 1;
}
#error-page .err-404 span {
  color: blue;
  font-size: 150px;
}
#error-page a.btn:hover {
  background: #494949;
  color: #fff;
}

</style>
<div id="error-page">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <h3>Page Not Found!</h3>
        <hr class="hr-style">
        <div class="err-404">
          4<span style="color:blue;">0</span>4
        </div>
        <hr class="hr-style">
        <a class="btn btn-default btn-lg" href="/">Home</a>
      </div>
    </div>
  </div>
</div>
