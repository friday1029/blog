<p id="notice"><%= notice %></p>

<h1>Banners</h1>

<table>
  <thead>
    <tr>
      <th>Title zh</th>
      <th>Title en</th>
      <th>Subtitle zh</th>
      <th>Sutitle en</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @banners.each do |banner| %>
      <tr>
        <td><%= banner.title_zh %></td>
        <td><%= banner.title_en %></td>
        <td><%= banner.subtitle_zh %></td>
        <td><%= banner.subtitle_en %></td>
        <td><%= image_tag(banner.image_url, height: 100) %></td>
        <td><%= link_to 'Show', admins_banner_path(banner) %></td>
        <td><%= link_to 'Edit', edit_admins_banner_path(banner) %></td>
        <td><%= link_to 'Destroy', admins_banner_path(banner), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

