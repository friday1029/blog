<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>is puplished</th>
      <th>is top</th>
      <th>Cover image</th>
      <th>Title zh</th>
      <th>Title en</th>
      <th>Intro zh</th>
      <th>Intro en</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.is_published %></td>
        <td><%= post.is_top %></td>
        <td><%= image_tag(post.cover_image_url, height: 100) %></td>
        <td><%= post.title_zh %></td>
        <td><%= post.title_en %></td>
        <td><%= post.intro_zh %></td>
        <td><%= post.intro_en %></td>
        <td><%= link_to 'Show', admins_post_path(post) %></td>
        <td><%= link_to 'Edit', edit_admins_post_path(post) %></td>
        <td><%= link_to 'Destroy', admins_post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

