<%= form_with(model: [:admins, post], multipart: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb-3">
    <%= form.label :cover_image %><br>
    <%= image_tag form.object.cover_image_url, height: 100 %>
    <%= form.file_field :cover_image, class: 'form-control' %>
  </div>
  <div class="field mb-3">
    <%= form.check_box :is_published %>
    <%= form.label :is_published, '發佈' %>
  </div>
  <div class="field mb-3">
    <%= form.check_box :is_top %>
    <%= form.label :is_top, '置頂' %>
  </div>
  <div class="field mb-3">
    <%= form.label :title_zh %>
    <%= form.text_field :title_zh, class: 'form-control' %>
  </div>

  <div class="field mb-3">
    <%= form.label :title_en %>
    <%= form.text_field :title_en, class: 'form-control' %>
  </div>

  <div class="field mb-3">
    <%= form.label :intro_zh %>
    <%= form.text_area :intro_zh, class: 'form-control', rows: 5 %>
  </div>

  <div class="field mb-3">
    <%= form.label :intro_en %>
    <%= form.text_area :intro_en, class: 'form-control', rows: 5 %>
  </div>

  <div class="field mb-3">
    <%= form.label :content_zh %>
    <div class="validation-input">
      <%= editor(form.object, :content_zh) %>
    </div>
  </div>

  <div class="field mb-3">
    <%= form.label :content_en %>
    <div class="validation-input">
      <%= editor(form.object, :content_en) %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
